<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wh.dao.UserInfoDao">

    <select id="getuserByid" resultType="com.wh.entity.UserDO" parameterType="java.lang.Long">

        SELECT *FROM u_user where id=#{id}

    </select>


    <select id="getuserByName" resultType="com.wh.entity.UserDO" parameterType="java.lang.String">

        SELECT *FROM u_user where name=#{name}

    </select>

</mapper>